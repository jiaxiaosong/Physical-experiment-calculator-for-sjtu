<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/Text1"
        android:textSize="30sp"
        android:text="请选择一个实验"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:id="@+id/Button1"
        android:layout_below="@id/Text1"
        android:text="测量刚体转动惯量"
        android:textSize="20sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:id="@+id/Button2"
        android:layout_below="@id/Button1"
        android:text="用纵向磁聚焦法测定电子荷质比"
        android:textSize="20sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:id="@+id/Button3"
        android:layout_below="@id/Button2"
        android:text="薄透镜焦距的测量"
        android:textSize="20sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:id="@+id/Button4"
        android:layout_below="@id/Button3"
        android:text="光学测角仪的调整与使用"
        android:textSize="20sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:id="@+id/Button5"
        android:layout_below="@id/Button4"
        android:text="落球法测液体粘滞系数"

        android:textSize="20sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:id="@+id/Button6"
        android:layout_below="@id/Button5"
        android:text="直流电桥与电阻测量"
        android:textSize="20sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:id="@+id/Button7"
        android:layout_below="@id/Button6"
        android:text="光敏电阻基本特性的测量"
        android:textSize="20sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:id="@+id/Button8"
        android:layout_below="@id/Button7"
        android:text="简谐振动的研究"
        android:textSize="20sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:id="@+id/Button9"
        android:layout_below="@id/Button8"
        android:text="连续信号和瞬态信号的测量"
        android:textSize="20sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:id="@+id/Button10"
        android:layout_below="@id/Button9"
        android:text="集成活儿传感器的特性测量及应用"
        android:textSize="20sp"/>

</RelativeLayout>